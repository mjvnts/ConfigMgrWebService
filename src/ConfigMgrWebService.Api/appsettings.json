{
  "AppSettings": {
    "ConfigMgr": {
      "SiteServer": "YOUR-SCCM-SERVER.domain.com",
      "DomainShortName": "DOMAIN",
      "PrimaryUserVariable": "SMSTSUDAUsers",
      "TemporaryUserDirectory": "C:\\Temp\\ConfigMgrWebService\\Users",
      "OsDeploymentCollections": {
        "WIN10": "OSD_Windows10_Collection",
        "WIN11": "OSD_Windows11_Collection"
      }
    },
    "GraphApi": {
      "AppDisplayName": "ConfigMgr WebService",
      "AppId": "YOUR-APP-ID-GUID",
      "TenantId": "YOUR-TENANT-ID-GUID",
      "SecretString": "YOUR-CLIENT-SECRET",
      "GraphUrl": "https://graph.microsoft.com/beta/"
    },
    "ActiveDirectory": {
      "Domain": "domain.com"
    },
    "Logging": {
      "LogFile": "C:\\Logs\\ConfigMgrWebService\\service.log",
      "MaxLogSize": 10485760,
      "MaxLogFiles": 10,
      "MinimumLevel": "Information"
    },
    "Authentication": {
      "EnableWindowsAuthentication": true,
      "EnableApiKeyAuthentication": true,
      "ApiKeys": {
        "your-secret-api-key-here": "External System 1",
        "another-api-key-here": "External System 2"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Logs\\ConfigMgrWebService\\service-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 10,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "<![LOG[{Message:lj}]LOG]!><time=\"{Timestamp:HH:mm:ss.fffzzz}\" date=\"{Timestamp:MM-dd-yyyy}\" component=\"{SourceContext}\" context=\"{ThreadId}\" type=\"{Level:u}\" thread=\"{ThreadId}\" file=\"{SourceName}\">{NewLine}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName", "WithEnvironmentName" ]
  },
  "AllowedHosts": "*"
}
